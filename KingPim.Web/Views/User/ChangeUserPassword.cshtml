@model ChangeUserPasswordViewModel
@{
    ViewData["Title"] = "Ändra ditt lösenord";
}
<partial name="_AlertSuccessInfoPartial" />
<partial name="_TitlePartial" />
<form asp-action="ChangeUserPassword" method="post">
    <div class="form-group">
        <label>Gammalt lösenord:</label>
        <input asp-for="OldPassword" class="form-control" minlength="3" required />
    </div>
    <div class="form-group">
        <label>Nytt lösenord:</label>
        <input asp-for="NewPassword" class="form-control" minlength="3" required />
    </div>
    <button class="btn btn-primary" type="submit">Spara</button>
    <a asp-controller="Product" asp-action="ListProducts" class="btn btn-secondary">Avbryt</a>
</form>