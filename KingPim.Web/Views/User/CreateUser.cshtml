@model UserViewModel
@{
    ViewData["Title"] = "Skapa användare";
}
<partial name="_TitlePartial" />
<form asp-action="CreateUser" method="post">
    <div class="form-group">
        <label>Användarnamn:</label>
        <input asp-for="UserName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>E-postadress:</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Lösenord:</label>
        <input asp-for="Password" class="form-control" minlength="3" required />
    </div>
    <div class="form-group">
        <label>Roll:</label>
        <select asp-for="Role" asp-items="Model.Roles" class="form-control" required></select>
    </div>
    <button class="btn btn-primary" type="submit">Spara</button>
    <a asp-action="ListUsers" class="btn btn-secondary">Avbryt</a>
</form>