@model ResetUserPasswordViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Ändra ditt lösenord";
}
<partial name="_TitlePartial" />
<form asp-controller="Login" asp-action="ResetUserPassword" method="post">
    <input asp-for="Code" type="hidden" />
    <div class="form-group">
        <label>E-postadress till din inloggning:</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Nytt lösenord:</label>
        <input asp-for="Password" class="form-control" minlength="3" required />
    </div>
    <button class="btn btn-primary" type="submit">Spara</button>
    <a asp-controller="Product" asp-action="ListProducts" class="btn btn-secondary">Avbryt</a>
</form>